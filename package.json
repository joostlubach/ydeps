{
  "name": "ydeps",
  "version": "0.0.1",
  "description": "General purpose type-safe dependency injection system.",
  "private": true,
  "author": "Joost Lubach <joostlubach@gmail.com>",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "(pnpm build:prepare && pnpm build:tsc && pnpm build:tsc-alias && pnpm build:copy && pnpm build:rsync); pnpm build:cleanup",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.prod.json --outDir .build",
    "build:tsc-alias": "tsc-alias -p tsconfig.prod.json --outDir .build",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css .build",
    "build:rsync": "rsync -uvaz --delete .build/ dist/",
    "build:cleanup": "rm -rf .build",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ytil": "workspace:^"
  }
}